<h1>投稿一覧</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>投稿id</th>
            <th>ユーザー名</th>
            <th>投稿タイトル</th>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.customer.nickname %></td>
            <td>
              <%= link_to  edit_post_path(post) do %>
                <%= post.title %>
              <% end %>
              </td>
            <td><%= post.category.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>