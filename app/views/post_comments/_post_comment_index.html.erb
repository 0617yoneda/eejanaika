<% post.post_comments.each do |post_comment| %>
  <div>
    <%= link_to customer_path(post_comment.customer)do %>
      <%= attachment_image_tag post_comment.customer, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <%= post_comment.customer.nickname %>
    <% end %>
    <%= post_comment.comment %>
  </div>
  <div>
    <% if post_comment.customer == current_customer %>
      <%= link_to "削除", post_post_comment_path(post, post_comment), method: :delete, remote: true, data: { confirm: "本当に消しますか？" }, class:"btn btn-sm btn-danger" %>
    <% end %>
  </div>
<% end %>