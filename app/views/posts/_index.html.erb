<!--bootstrapでカード化-->
<% posts.each do |post| %>
  <div>
    <div>
      <%= post.category.name  %>
    </div>
    <div>
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, :fill, 200, 200, format: 'jpeg' %><br>
      <% end %>
    </div>
    <div>
      <%= post.title %><br>
    </div>
    <div>
      <%= attachment_image_tag post.customer, :profile_image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
    </div>
    <div>
      <%= post.customer.nickname %>
    </div>
    <div>
      コメント<%= post.post_comments.count %>件 | GOOD♥<%= post.favorites.count %>件
    </div>
  </div>
<% end %>