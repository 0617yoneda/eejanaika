<div class="search_area">
  <%= search_form_for @q, url: search_posts_path do |f| %>
    <div class='input-group'>
      <%= f.search_field :title_or_body_cont, placeholder: "何かお探しでしょうか？", class: 'form-control search_box' %>
      <div class='input-group-append'>
        <%= f.submit "検索", class: 'btn search_btn' %>
      </div>
    </div>
  <% end %>
</div>