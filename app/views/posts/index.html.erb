<div class="loading">
  <div class="animation">夢中になってもええじゃないか！</div>
</div>

<%= render "posts/search_form" %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/profile", customer: @customer %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h1>投稿一覧</h1>
      <div>
        <% @categories.each do |category| %>
          <%= link_to category.name, category_posts_path(category), class:"btn btn-sm btn-success" %>
        <% end %>
      </div>
      <h6>『夢中』に関する投稿が全<%= @posts.count %>件あります！</h6>
      <%= render "posts/index", posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>


