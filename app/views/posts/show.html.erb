<h1><%= @post.title %></h1>

<!--bootstrapでカード化-->
<div>
  <div>
    <%= @post.category.name  %>
  </div>
  <div>
    <%= link_to posts_path(@post) do %>
      <%= attachment_image_tag @post, :image, :fill, 200, 200, format: 'jpeg' %><br>
    <% end %>
  </div>

  <div>
    <%= @post.body %><br>
  <div>
  <div>
    いいね数〇件　コメント数〇件
  </div>
  <div>
    <% if @post.customer == current_customer %>
      <%= link_to "編集", edit_post_path(@post), class:"btn btn-sm btn-success" %>
      <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に消しますか？" }, class:"btn btn-sm btn-danger" %>
    <% end %>
  </div>
  <p>コメント記入欄</p>
  <p>コメント送信ボタン</p>
  <p>各コメント欄</p>
  <p>コメントに削除ボタン</p>
</div>

